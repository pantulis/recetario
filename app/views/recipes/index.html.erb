						<td class="center">
							<a class="btn btn-info" href="<%= url_for edit_recipe_url(item) %>">
								<i class="icon-edit icon-white"></i>
								Edit
							</a>
								
							<%= link_to(item, data: { confirm: 'Â¿Seguro?'} , class: "btn btn-danger", method: :delete) do %>
								Borrar<i class="icon-trash icon-white"></i>
							<% end %>
