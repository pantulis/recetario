
<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Recipes</a> <span class="divider">/</span>
    </li>
    <li>
      <%= link_to 'Index', recipes_url %><span class="divider">/</span>
    </li>
    <li>
      <a href="#">Edición</a>
    </li>
  </ul>
</div>


<div class="row-fluid sortable">	
  <div class="box span12">
    
    <div data-original-title="" class="box-header well">
      <h2><i class="icon-edit"></i> Editar receta</h2>
    </div>
    
    <div class="box-content">
      <%= form_for resource, :html => {:class => "form-horizontal"} do |f| %>
      <fieldset>
	<legend>Editando la receta '<%= resource.name %>'</legend>
	
	<div class="control-group">
	  <label class="control-label" for="name">Nombre</label>
	  
	  <div class="controls">
	    <%= f.text_field :name, {:class => 'span6' } %>
	    <p class="help-block">Introducir el nombre de la receta (max 255 caracteres)</p>
	  </div>
	</div>
        
	<div class="control-group">
	  <label class="control-label" for="description">Preparación</label>
	  
	  <div class="controls">
	    <div class="span6">
	      <%= f.text_area :description, {:class => 'cleditor', :rows => 20 } %>
	      <p class="help-block">Escribir la elaboración de la receta</p>
	    </div>
	  </div>
	</div>

	<div class="control-group">
	  <label class="control-label" for="ingredient_ids">Ingredientes</label>
	  <div class="controls">
	    <%= f.select :ingredient_ids, Ingredient.all.collect{|p| [ p.name, p.id ] }, {}, {:class => 'span6', :multiple => true, "data-rel" => "chosen"} %>
	    <p class="help-block">Escoge los ingredientes de la receta (autocompletado)</p>
	    
	  </div>
	</div>
	
	<div class="form-actions">
	  <%= f.submit "Guardar", {:class => "btn btn-primary" } %>

	</div>

      </fieldset>
      <% end %>
    </div>
  </div><!--/span-->
</div><!--/row-->
