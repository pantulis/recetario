	<%= stylesheet_link_tag "jquery-ui-1.8.21.custom", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "fullcalendar", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "fullcalendar.print", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "chosen", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "uniform.default", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "colorbox", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "jquery.cleditor", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "jquery.noty", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "noty_theme_default", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "elfinder.min", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "elfinder.theme", media: "all", "data-turbolinks-track" => true %>
	<%= stylesheet_link_tag "jquery.iphone.toggle", media: "all", "data-turbolinks-track" => true %>
