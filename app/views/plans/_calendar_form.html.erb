
<div class="row-fluid sortable">
	<div class="box">
		<div class="box-header well" data-original-title>
			<h2><i class="icon-calendar"></i>Calendar</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
				<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
			</div>
		</div>
		
		<div class="box-content">
			
			<%= form_for @resource, :html => {:class => "form-horizontal"} do |f| %>					  
			
			<fieldset>
							  
				<div class="control-group">

					<div class="span8">
						<div id="mycalendar"></div>
					</div>

					<div id="external-events" class="well span2">
						<i class="icon-search"></i>
						<strong>Recetas</strong>
						
						<%= text_field_tag :filter,nil,:class => "span12"  %>
						
						<% Recipe.all.each do |recipe| %>
							<div class="external-event badge" data-id="<%= recipe.id %>" data-name="<%= recipe.name %>" style="display:none"><%= recipe.name.truncate(50) %></div>
						<% end %>
					</div> <!-- #external-events -->

					
					<div class="clearfix"></div>

			
					<div class="form-actions">
						<%= f.submit "Guardar", {:class => "btn btn-primary" } %>
						<%= link_to 'Volver', ingredients_url, :class => "btn btn-info" %>
					</div> <!-- .form-actions -->
						  		
				</div> <!-- .control-group -->	
	
			</fieldset>
			
			<% end %>
		</div> <!-- .box-content -->
	</div> <!-- .box -->
		
</div><!--/row-->

<%= render 'js_for_calendar', :locals => { resource: @resource } %>			
