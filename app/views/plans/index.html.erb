<div>
	<ul class="breadcrumb">
		<li><a href="#">Calendarios</a> <span class="divider">/</span></li>
		<li>Índice</li>
	</ul>
</div>
	
				
<div class="row-fluid sortable">	
	<div class="box span12">
					
		<div class="box-header well" data-original-title>
			<h2>Calendarios</h2>
			<%= link_to('Nuevo calendario', new_plan_url, {class: "btn btn-success pull-right"}) %>
		</div>

		<div class="box-content">
			<table class="table table-striped table-condensed bootstrap-datatable">
				<thead>
					<tr>
						<th>Nombre</th>
						<th>Acciones</th>
					</tr>
						  
				</thead> 
				  
				<tbody>
					<% @collection.each do |item| %>
					<tr>
						<td>
							Calendario del <%= I18n.l(item.start_date.to_date,:format => :short) %> al <%= I18n.l(item.end_date.to_date , :format => :short) %>
						</td>
						
						<td class="center">
							<a class="btn btn-info" href="<%= url_for edit_plan_url(item) %>">
								<i class="icon-edit icon-white"></i>
								Editar
							</a>

							<a class="btn btn-info" href="<%= url_for export_plan_url(item) %>">
								<i class="icon-share icon-white"></i>
								Toodledo
							</a>
								
							<%= link_to(item, data: { confirm: '¿Estás seguro?' }, class: "btn btn-danger", method: :delete) do %>
								Borrar<i class="icon-trash icon-white"></i>
							<% end %>		  
						</td> 
					</tr>
					<% end %>
				</tbody>
				
			</table>  
		</div>
	</div><!--/span-->
</div><!--/row-->

