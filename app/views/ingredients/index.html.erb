<div>
	<ul class="breadcrumb">
		<li>
			<a href="#">Ingredientes</a> <span class="divider">/</span>
		</li>
		<li>
			Índice
		</li>
	</ul>
</div>

<div class="row-fluid sortable">
	<div class="box span12">
					
		<div class="box-header well" data-original-title>
			<h2>Ingredientes</h2>
				
			<%= link_to('Nuevo ingrediente', new_ingredient_url, {class: "btn btn-success pull-right"}) %>

		</div>
		<div class="box-content">
			<table class="table table-striped table-condensed bootstrap-datatable datatable">
				<thead>
					<tr>
						<th>Nombre</th>
						<th>Acciones</th>
					</tr>

				</thead>
				<tbody>

				<% collection.each do |item| %>
					<tr>
						<td><%= item.name %></td>
						<td class="center">
							<a class="btn btn-info" href="<%= url_for edit_ingredient_url(item) %>">
								<i class="icon-edit icon-white"></i>
								Editar
							</a>
								
							<%= link_to(item, data: { confirm: '¿Seguro?' }, class: "btn btn-danger", method: :delete) do %>Borrar<i class="icon-trash icon-white"></i><% end %>
							
							<div class="btn-group pull-right">
								
								<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
									<i class="icon-list"></i>Recetas<span class="caret"></span>
								</a>
								
								<ul class="dropdown-menu">
									<% item.recipes.uniq.each do |recipe| %>
										<li><%= link_to recipe.name, edit_recipe_url(recipe) %></li>
									<% end %>
								</ul>
							</div><!-- .btn-group -->
						</td> 
					</tr>
				<% end %>
				
				</tbody>
			</table>  
		</div>
	</div><!--/span-->
</div><!--/row-->

